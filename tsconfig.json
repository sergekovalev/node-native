{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./build",
    "incremental": true,
    "allowJs": true
  },
  "include": [
    "./src/**/*",
    "./test/**/*",
  ],
  "exclude": [
    ".eslintrc.js"
  ]
}
